<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbars"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="20.0dip"
        android:layout_marginBottom="0dip"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/phoneNum_layout"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="0dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:background="@mipmap/user_img"
      />


    <EditText
        android:background="@null"
        android:id="@+id/et_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:hint="11位手机号码" />


</LinearLayout>
        <ImageView
            android:background="@mipmap/login_inputbox_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_passWord"

            android:background="@mipmap/password_img"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
           />
        <EditText
            android:id="@+id/et_passWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:background="@null"
            android:textColorHint="@color/white"
            android:hint="请输入密码" />

    </LinearLayout>
        <ImageView
            android:background="@mipmap/login_inputbox_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="40.0dip" android:layout_below="@id/et_passWord">
            <TextView android:textColor="@color/red" android:gravity="center"
            android:id="@+id/loginButton" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="40.0dip" android:text="登录" android:layout_weight="1.0" />
            <TextView android:textColor="@color/white" android:gravity="center"
                android:id="@+id/registerBtn" android:background="#26ffffff" android:layout_width="wrap_content" android:layout_height="40.0dip" android:layout_marginLeft="13.299988dip" android:text="注册" android:layout_weight="1.0" android:layout_toRightOf="@id/loginButton" />
        </LinearLayout>


<!--    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="注册"

        />-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dip"
        android:layout_marginBottom="26.699982dip">
        <View android:layout_gravity="center" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="0.30000007dip" android:layout_marginRight="12.699982dip" android:layout_weight="1.0" />
        <TextView android:textSize="12.699982dip" android:textColor="@color/white" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="第三方账号快捷登录" android:singleLine="true" />
        <View android:layout_gravity="center" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="0.30000007dip" android:layout_marginLeft="12.699982dip" android:layout_weight="1.0" />
    </LinearLayout>

<!--        <TextView
            android:background="@mipmap/signupqq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />-->


    <GridView
        android:id="@+id/gv_thirdLogin"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>

    </LinearLayout>


</LinearLayout>
