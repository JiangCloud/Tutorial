<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent">
        </androidx.appcompat.widget.Toolbar>

<RelativeLayout
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="50dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColorHint="@color/white"
        android:paddingLeft="12.0dip"
        android:textSize="14sp"
        android:hint="请输入手机号"


        />

    <EditText
        android:layout_below="@+id/etPhoneNum"
        android:id="@+id/checkPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:maxLines="1"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="10dip"
        android:paddingLeft="12.0dip"
        android:hint="请输入验证码"


        android:layout_toLeftOf="@+id/tv_reLongin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText

        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkPhoneNum"
        android:paddingLeft="12.0dip"
        android:textColorHint="@color/white"
        android:password="true"
        android:textSize="14sp"
        android:hint="请输入密码"

        />
    <EditText

        android:id="@+id/registerRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerPassword"
        android:paddingLeft="12.0dip"
        android:textColorHint="@color/white"

        android:textSize="14sp"
        android:password="true"
        android:hint="请确认密码"

        />


    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textColor="@color/red"
        android:background="@color/white"
        android:textSize="14sp"
        android:layout_alignTop="@+id/checkPhoneNum"
        android:layout_alignRight="@+id/etPhoneNum"
        android:layout_alignEnd="@+id/etPhoneNum"
        android:layout_alignBottom="@+id/checkPhoneNum" />

    <Button
        android:id="@+id/registerSubBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/registerRePassword"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/red"
        android:text="注册"

        />
    <TextView
        android:id="@+id/tv_reLongin"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号点击请登陆"
        android:layout_below="@+id/registerSubBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
   <!-- <Button
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检验取验证码"
        android:layout_below="@+id/registerSubBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->


</RelativeLayout>



</RelativeLayout>
