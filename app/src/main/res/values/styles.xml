    <!--&lt;!&ndash;        <item name="android:background">@color/black</item>&ndash;&gt;-->
    <!--        &lt;!&ndash;设置字体颜色&ndash;&gt;-->
    <!--        <item name="android:textColor">@color/white</item>-->
    <!--        &lt;!&ndash;设置不覆盖锚点，即不覆盖三个点&ndash;&gt;-->
